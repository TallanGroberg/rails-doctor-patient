<h1>edit patient</h1>

<%= form_with(model: @patient, local: true, class: "ui form") do |f| %>
<div class="field">
  <%= f.label :first_name %>
  <%= f.text_field :first_name, required: true, placeholder: "first Name" %>
</div>
<div class="field">
  <%= f.label :last_name %>
  <%= f.text_field :last_name, required: true, placeholder: "last Name" %>
</div>
<%= f.submit  %>
<% end %>
